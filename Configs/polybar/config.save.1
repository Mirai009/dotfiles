[colors]
background = 
foreground = #d8dee9
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/nord-light]
width = 100%
height = 25
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 4
border-color = #00000000

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = Fira Code Nerd Font:pixelsize=10;1
font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
font-2 = siji:pixelsize=10;1

modules-left = bspwm 
modules-center = 
modules-right = pulseaudio filesystem wlan date

tray-position = right
tray-padding = 2

cursor-click = pointer
cursor-scroll = ns-resize

enable-ipc = true

[module/filesystem]
type = internal/fs
interval = 25
mount-0 = /
label-mounted =  %free%
label-mounted-underline = #81A1C1

[module/bspwm]
type = internal/bspwm
pin-workspaces = false
enable-click = true
enable-scroll = true
format-padding = 5
index-sort = true
wrapping-scroll = false

format = <label-state>
format-background = ${colors.background}
format-foreground = ${colors.foreground}

label-focused = %icon%
label-focused-background = 
label-focused-underline= #81A1C1
label-focused-padding = 2

label-occupied = %icon%
label-occupied-padding = 2

label-urgent = %icon%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

label-empty = %icon%
label-empty-foreground = ${colors.foreground }
label-empty-padding = 2

ws-icon-0 = I;
ws-icon-1 = II;
ws-icon-2 = III;
ws-icon-3 = IV;
ws-icon-4 = V;

[module/wlan]
type = internal/network
interface = wlp0s29u1u5
interval = 3.0

format-connected = <ramp-signal> <label-connected>
format-connected-underline = #81A1C1 
label-connected = %essid%

format-disconnected = 睊
ramp-signal-0 = 直

[module/date]
type = internal/date
interval = 5

date =
date-alt = " %Y-%m-%d"

time = %H:%M
time-alt = %H:%M:%S

format-prefix = 
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #81A1C1

label = %date% %time%


[module/pulseaudio]
type = internal/pulseaudio

format-volume = <label-volume> <bar-volume>
label-volume = 
label-volume-foreground = ${root.foreground}

label-muted = 
label-muted-foreground = #666

bar-volume-width = 10
bar-volume-foreground-0 = #81A1C1
bar-volume-foreground-1 = #81A1C1
bar-volume-foreground-2 = #81A1C1
bar-volume-foreground-3 = #81A1C1
bar-volume-foreground-4 = #81A1C1
bar-volume-foreground-5 = #81A1C1
bar-volume-foreground-6 = #81A1C1
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.foreground-alt}

[settings]
screenchange-reload = true

[global/wm]
margin-top = 5
margin-bottom = 5

; vim:ft=dosini
